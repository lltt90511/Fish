<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ppsgame_theme_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ppsgame_bind_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bind_back"
            style="@style/ppsgame_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/ppsgame_bind"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bind_back"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="20.0dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ppsgame_bind_title2"
                android:textColor="@color/ppsgame_yellow"
                android:textSize="12.0sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:paddingLeft="10.0dp"
                android:background="@drawable/ppsgame_edittext_bg"
                android:gravity="center" >

                <EditText
                    android:id="@+id/bind_username"
                    style="@style/ppsgame_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="36.0dp"
                    android:drawableLeft="@drawable/ppsgame_username"
                    android:hint="@string/pps_bind_email_hint" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:paddingLeft="10.0dp"
                android:background="@drawable/ppsgame_edittext_bg"
                android:gravity="center" >

                <EditText
                    android:id="@+id/bind_password"
                    style="@style/ppsgame_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="36.0dp"
                    android:drawableLeft="@drawable/ppsgame_pwd"
                    android:hint="@string/pps_register_pwd_hint"
                    android:inputType="textPassword" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/pps_bind_btn"
            style="@style/ppsgame_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ppsgame_bind"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="30.0dp"
            android:background="@drawable/ppsgame_yellow_btn_selector"
            android:text="@string/ppsgame_bind" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4.0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:background="@color/ppsgame_sdk_line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dp"
            android:src="@drawable/ppsgame_logo" />
    </LinearLayout>

</RelativeLayout>