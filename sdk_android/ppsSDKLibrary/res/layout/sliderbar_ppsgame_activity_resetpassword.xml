<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/slidebar_ppsgame_background"
    android:orientation="vertical" >

    <RelativeLayout style="@style/TitleBar" >

        <ImageButton
            android:id="@+id/ppsgame_slider_back_pre"
            style="@style/BackBtn" />

        <TextView
            android:id="@+id/ppsgame_slider_title"
            style="@style/TitleTextView"
            android:text="@string/ppsgame_pop_reset_title" />

        <Button
            android:id="@+id/ppsgame_slider_back_game"
            style="@style/BackToGameBtn" />
    </RelativeLayout>

    <EditText
        android:id="@+id/game_reset_input1_tf"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/sliderbar_edittext_bg"
        android:gravity="left|center_vertical"
        android:hint="@string/sliderbar_reset_pwd_pls_input_old"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/slidebar_black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/game_reset_input2_tf"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sliderbar_edittext_bg"
        android:gravity="left|center_vertical"
        android:hint="@string/sliderbar_reset_pwd_pls_input_new"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/slidebar_black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/game_reset_input3_tf"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sliderbar_edittext_bg"
        android:gravity="left|center_vertical"
        android:hint="@string/sliderbar_reset_pwd_pls_input_new_again"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/slidebar_black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        
        android:enabled="false"
        android:gravity="center_vertical|left"
        android:paddingLeft="3dp"
        android:text="@string/sliderbar_resetpwd_tip1"
        android:textColor="#4C4C4C"
        android:textSize="14sp" />

    <Button
        android:id="@+id/game_reset_ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/sliderbar_back_btn_selector1"
        android:gravity="center"
        android:text="@string/ppsgame_pop_ok"
        android:textColor="@color/slidebar_white"
        android:textSize="22sp" />

</LinearLayout>