<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="1dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ppsgame_slider_gift_list_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/ppsgame_slider_gift_user_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ppsgame_slider_gift_user_icon"
                android:layout_width="@dimen/gift_detail_use_icon_width"
                android:layout_height="@dimen/gift_detail_use_icon_height"
                android:src="@drawable/sliderbar_noavatar_face_bg" />

            <TextView
                android:id="@+id/ppsgame_slider_gift_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/ppsgame_slider_gift_user_icon"
                android:textColor="@color/slidebar_black" />

            <Button
                android:id="@+id/ppsgame_slider_gift_share"
            android:layout_width="@dimen/item_game_gifts_gift_btn_width"
            android:layout_height="@dimen/item_game_gifts_gift_btn_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sliderbar_copy_btn"
                android:layout_marginRight="10dip"
                android:text="分享"
                android:textColor="@color/slidebar_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ppsgame_slider_gift_user_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:background="#22000000"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dip"
                android:layout_height="30dip"
                android:background="@drawable/sliderbar_game_gift_t1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="礼包"
                android:textColor="@color/slidebar_ppsgame_white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>