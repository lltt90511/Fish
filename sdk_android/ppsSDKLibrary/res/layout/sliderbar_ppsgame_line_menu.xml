<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.pps.sdk.slidebar.widget.PPSGameLineMenuItem
        android:id="@+id/ppsgame_menu_handle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/ppsgame_menu_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ppsgame_menu_controller_hide_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sliderbar_hide"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ppsgame_menu_controller_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ppsgame_menu_controller_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/sliderbar_menu_icon" />
    </RelativeLayout>

</merge>