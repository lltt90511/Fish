<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="300.0dp"
    android:minHeight="200.0dp"
    android:padding="10.0dp"
    android:background="@drawable/ppsgame_bg"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/ppsgame_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18.0sp"
        android:textColor="@color/ppsgame_black"
        android:text="@string/ppsgame_dialog_title"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_margin="10.0dp"
        android:background="@color/ppsgame_sdk_line"/>
    
    <TextView android:id="@+id/ppsgame_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dp"
        android:textSize="16.0sp"
        android:textColor="@color/ppsgame_black"
        android:text="@string/ppsgame_dialog_title"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:layout_marginLeft="20.0dp"
        android:layout_marginRight="20.0dp"
        android:layout_marginBottom="20.0dp"
        android:orientation="horizontal">
        
        <Button
        android:id="@+id/ppsgame_dialog_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ppsgame_yellow_btn_selector"
        android:text="@string/ppsgame_dialog_cancel"
        android:textColor="@color/ppsgame_white"
        android:textSize="18.0sp" />
        
        <Button
        android:id="@+id/ppsgame_dialog_commint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10.0dp"
        android:background="@drawable/ppsgame_yellow_btn_selector"
        android:text="@string/ppsgame_dialog_commit"
        android:textColor="@color/ppsgame_white"
        android:textSize="18.0sp" />
        
    </LinearLayout>
    

</LinearLayout>
