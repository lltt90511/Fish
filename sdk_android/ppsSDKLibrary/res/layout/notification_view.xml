<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/notifi_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:src="@drawable/slidebar_ppsgame_menu_account" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/notifi_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notifi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/slidebar_ppsgame_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notifi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notifi_title"
            android:singleLine="true"
            android:textColor="@color/slidebar_ppsgame_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/notifi_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:singleLine="true"
        android:textColor="@color/slidebar_ppsgame_gray"
        android:textSize="12sp" />

</RelativeLayout>