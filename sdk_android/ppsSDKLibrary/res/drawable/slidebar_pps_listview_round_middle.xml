<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="0.0px"
    android:insetLeft="1.0px"
    android:insetRight="1.0px"
    android:insetTop="1.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/slidebar_base_end_color_pressed"
                    android:startColor="@color/slidebar_base_start_color_pressed" />

                <corners android:radius="0.0dip" />
                
                <stroke
        			android:width="0.5dp"
        			android:color="#cbcbcb" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="@color/slidebar_base_end_color_default"
                    android:startColor="@color/slidebar_base_start_color_default" />

                <corners android:radius="0.0dip" />
                
                <stroke
        			android:width="0.5dp"
        			android:color="#cbcbcb" />
            </shape>
        </item>
    </selector>

</inset>