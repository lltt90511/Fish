 <item name="android:textStyle">bold</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">2</item>
    <item name="android:shadowRadius">1</item>-->

    <!-- 全局Title状态栏 -->
    <style name="TitleBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54dip</item>
        <item name="android:background">#FF8A00</item>
    </style>

    <!-- 返回按钮 -->
    <style name="BackBtn" parent="ButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/sliderbar_back_icon</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">30dip</item>
    </style>

    <!-- 返回游戏按钮 -->
    <style name="BackToGameBtn" parent="ButtonTextStyle">
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/sliderbar_back_btn_selector</item>
        <item name="android:text">@string/slidebar_back_to_game</item>
    </style>
    <!-- 更新侧边栏按钮 -->
    <style name="slidebar_update_btn" parent="ButtonTextStyle">
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/sliderbar_back_btn_selector</item>
        <item name="android:text">@string/slidebar_back_to_game</item>
    </style>
    
    <!-- 全部已领取按钮 -->
    <style name="GiftAllGetBtn" >
        <item name="android:layout_width">81dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/slidebar_ppsgame_gray</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:background">@drawable/slidebar_gift_allget_normal_bg</item>
    </style>

    <!-- one key copy -->
    <style name="OneKeyCopyBtn" parent="CopyBtnWidthHeight">
        <item name="android:textColor">@color/slidebar_ppsgame_gray</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/slidebar_gift_item_get_btn_bg</item>
    </style>

    <!-- 网络情况不佳 -->
    <style name="BadNetworkTxt" parent="slidebar_WrapContent">
        <item name="android:text">@string/sliderbar_recharge_inquuiry_str8</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 一键复制、复制、领取、返回游戏按钮宽度 高度 -->
    <style name="CopyBtnWidthHeight">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!-- 账户界面 边框 -->
    <style name="AccountLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:background">@drawable/sliderbar_reportlistview_press_color</item>
    </style>

    <!-- 账户界面 右箭头 -->
    <style name="ArrowRight" parent="slidebar_WrapContent">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">31dp</item>
        <item name="android:src">@drawable/slidebar_common_problems_arrows_right</item>
    </style>

    <!-- 账户界面 中间字体 -->
    <style name="AccountTxt" parent="slidebar_WrapContent">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/slidebar_menu_item_color</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- 账户界面 图标 -->
    <style name="AccountIcon" parent="slidebar_WrapContent">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">22.5dp</item>
    </style>

</resources>